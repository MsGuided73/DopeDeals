# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration for Prisma (Session Mode - Port 5432)
DATABASE_URL="postgresql://postgres.yourproject:password@db.yourproject.supabase.co:5432/postgres"

# Site URL (used by sitemap/robots)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Zoho Integration
# Data Center options: us, eu, in
ZOHO_DC=us
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_ORGANIZATION_ID=your_zoho_org_id
ZOHO_REDIRECT_URI=http://localhost:3000/api/zoho/oauth/callback

# KajaPay Payment Gateway
KAJAPAY_USERNAME=your_kajapay_username
KAJAPAY_PASSWORD=your_kajapay_password
KAJAPAY_SOURCE_KEY=your_kajapay_source_key

# OpenAI for AI Features
OPENAI_API_KEY=your_openai_api_key

# ShipStation Integration
SHIPSTATION_API_KEY=your_shipstation_api_key
